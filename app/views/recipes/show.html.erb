<h1><%= @recipe.title %></h1>
<h2><%= @recipe.chef %></h2>
<h4>Updated at: <%= @recipe.friendly_updated_at %></h4>
<h4>Prep time: <%= @recipe.friendly_prep_time %></h4>
<h3>Ingredients:</h3>
<ul>
  <% @ingredients.each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>
<h3>Directions:</h3>
<ol>
  <% @directions.each do |direction| %>
    <li><%= direction %></li>
  <% end %>
</ol>
<%= image_tag @recipe.image %>
<%= link_to "Edit", "/recipes/#{@recipe.id}/edit" %>
<%= link_to "Delete", "/recipes/#{@recipe.id}", method: :delete %>